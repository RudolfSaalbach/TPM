# Chronos Port Configuration
# Copy this file to .env and adjust the port settings as needed

# Host port for Chronos API (default: 8080)
# Change this if port 8080 is already in use on your host system
CHRONOS_HOST_PORT=8080

# Example: If port 8080 is occupied, use port 8085
# CHRONOS_HOST_PORT=8085

# Other environment variables
LOG_LEVEL=INFO
TZ=UTC
CHRONOS_API_KEY=your-secure-api-key-here
CHRONOS_WEBHOOK_URL=https://your-webhook-endpoint.com
CHRONOS_WEBHOOK_API_KEY=your-webhook-api-key
